@{
    Layout = null;
    int current = ViewBag.CurrentPage ?? 1;
    int total = ViewBag.TotalPages ?? 1;

    int start = Math.Max(1, current - 2);
    int end = Math.Min(total, current + 2);
}
@model List<MovieItem>

<!DOCTYPE html>
<html>
<head>
