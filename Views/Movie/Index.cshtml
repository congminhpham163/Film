    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie+</title>
    <link rel="stylesheet" href="/css/movie.css" />
    <link rel="stylesheet" href="/css/continue-watching.css" />
</head>
<body>

    @Html.Partial("_Header")

