@model User
@{
    Layout = null;
}

<link rel="stylesheet" href="/css/account.css" />

<div class="auth-container">

    <div class="auth-box">
        <h2>Đăng ký</h2>

        <form method="post">

            <input asp-for="FullName" placeholder="Họ tên" />
            <span asp-validation-for="FullName" class="field-error"></span>

            <input asp-for="Email" placeholder="Email" />
            <span asp-validation-for="Email" class="field-error"></span>

            <input asp-for="Password" type="password" placeholder="Mật khẩu" />
            <span asp-validation-for="Password" class="field-error"></span>

            <input asp-for="ConfirmPassword" type="password" placeholder="Xác nhận mật khẩu" />
            <span asp-validation-for="ConfirmPassword" class="field-error"></span>

            <button type="submit">Đăng ký</button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="error">@ViewBag.Error</div>
        }

        <p class="switch">
            Đã có tài khoản?
            <a href="/Account/Login">Đăng nhập</a>
        </p>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
